{
    "compilerOptions": {
        "target":"ES2018",
        "lib": ["es5", "es6", "es2018"],
        "module":"commonJS",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs":true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "outDir":"build",
        "rootDir":"src"
    },
    "compileOnsave": true,
    "include": ["src"]
}
